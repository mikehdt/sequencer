{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "A simple and reliable webpack starter kit",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "yarn lint && yarn jest",
    "test:watch": "yarn lint && yarn jest --watch",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"./src/**/*.js\" --fix",
    "lint:css": "stylelint \"src/**/*.{css,less,scss}\" --fix",
    "jest": "jest",
    "start": "webpack-dev-server --progress --config webpack.dev.babel.js",
    "build": "webpack --progress --config webpack.prod.babel.js"
  },
  "dependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "deep-object-diff": "^1.1.0",
    "favicons-webpack-plugin": "^0.0.8",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.1.0",
    "inquirer": "^5.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.8.3",
    "normalize.css": "^8.0.0",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "postcss-loader": "^2.1.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "three": "^0.91.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "url-loader": "^1.0.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "jest": "^22.4.3",
    "source-map-loader": "^0.2.2",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.0.0",
    "webpack-dev-server": "^3.1.1"
  }
}
